<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_background_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <HorizontalScrollView
            android:id="@+id/hsv"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <LinearLayout
            android:id="@+id/ll_width"
            android:paddingRight="@dimen/space_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:background="@color/bg_background_white"
            android:layout_width="match_parent"
            android:layout_height="105dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:src="@mipmap/group_9_1"
                />

            <RelativeLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_toRightOf="@+id/iv_icon"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/text_size_16"
                    android:text="ywqeqw"
                    />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:textColor="@color/bg_main"
                    android:layout_marginTop="@dimen/space_6"
                    android:text="哈哈时间"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tv_price"
                    android:text="8888"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_golden"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/text_size_15"
                    android:text="选定"
                    />

                <TextView
                    android:id="@+id/tv_get_num"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/text_drak_black"
                    android:textSize="@dimen/text_size_15"
                    android:text="选定"
                    />

                <LinearLayout
                    android:visibility="invisible"
                    android:id="@+id/ll_num"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_6"
                        android:paddingLeft="@dimen/space_8"
                        android:paddingRight="@dimen/space_8"
                        android:text="—"
                        android:textSize="@dimen/text_size_17"
                        />
                    <View
                        android:background="@color/divider_color_item"
                        android:layout_width="@dimen/space_divider_2"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/edt_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@null"
                        android:text="1"
                        android:paddingLeft="@dimen/space_8"
                        android:paddingRight="@dimen/space_8"
                        />

                    <View
                        android:background="@color/divider_color_item"
                        android:layout_width="@dimen/space_divider_2"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_6"
                        android:paddingLeft="@dimen/space_8"
                        android:paddingRight="@dimen/space_8"
                        android:text="+"
                        android:textSize="@dimen/text_size_17"
                        />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:paddingRight="@dimen/space_15"
            android:paddingLeft="@dimen/space_15"
            android:background="@color/bg_background_white"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            >

            <TextView
                android:textColor="@color/text_golden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="hhhhhhhhhhhhhhh"
                android:textSize="@dimen/text_size_16"
                android:id="@+id/tv_golden"
                />

            <TextView
                android:id="@+id/tv_next"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_drak_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_golden"
                />


            <ImageView
                android:paddingLeft="@dimen/space_30"
                android:id="@+id/iv_show"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/group_14_1"
                />

        </RelativeLayout>

        <RelativeLayout
            android:paddingBottom="@dimen/space_5"
            android:paddingTop="@dimen/space_5"
            android:id="@+id/rl_activity"
            android:background="@drawable/bg_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_25"
            android:layout_marginRight="@dimen/space_25"
            >

            <TextView
                android:drawablePadding="@dimen/space_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:layout_marginLeft="@dimen/space_10"
                android:gravity="center_vertical"
                android:textColor="@color/text_drak_black"
                android:id="@+id/tv_activity"
                android:drawableLeft="@mipmap/group_14_2"
                />


        </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/main_right_drawer_layout"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_golden"
                    >
                    <TextView
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/bg_background_white"
                        android:id="@+id/tv_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="删除" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
    <com.youzheng.zhejiang.robertmoog.utils.View.NoScrollListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_ls"
        ></com.youzheng.zhejiang.robertmoog.utils.View.NoScrollListView>

</LinearLayout>