<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_background_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

    <RelativeLayout
        android:id="@+id/rl_width"
        android:paddingRight="@dimen/space_20"
        android:background="@color/bg_background_white"
        android:layout_width="wrap_content"
        android:layout_height="115dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_15"
            android:src="@mipmap/group_9_1"
            />

        <RelativeLayout
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_18"
                android:text="ywqeqw"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:textColor="@color/bg_main"
                android:layout_marginTop="@dimen/space_6"
                android:text="哈哈时间"
                android:textSize="@dimen/text_size_15"
                />

            <TextView
                android:id="@+id/tv_price"
                android:text="8888"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_golden"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_15"
                android:text="选定"
                />

        </RelativeLayout>


    </RelativeLayout>

     <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/main_right_drawer_layout"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_golden"
                    >
                    <TextView
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/bg_background_white"
                        android:id="@+id/tv_test"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="删除" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
</HorizontalScrollView>

</RelativeLayout>