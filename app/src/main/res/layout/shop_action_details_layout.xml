<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar"
        />
    <include layout="@layout/layout_no_web"
        android:id="@+id/no_web"
        android:visibility="gone"/>
    <LinearLayout
        android:paddingTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/bg_background_white"
        >
        <LinearLayout
        android:layout_marginLeft="@dimen/space_15"
        android:layout_below="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动名称:"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_main"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动开始时间:"
                />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动结束时间:"
                />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_event"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_below="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal"
            >

            <TextView
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动摘要:"
                />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/text_main"
                />

        </LinearLayout>


        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/space_divider_2"-->
            <!--android:background="@color/bg_all"/>-->


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_5"
            android:background="@color/bg_all"/>

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        <TextView
            android:id="@+id/tv_goods"
            android:layout_marginBottom="@dimen/space_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_7"
            android:layout_marginLeft="@dimen/space_15"
            android:text=""
            android:visibility="visible"
            android:textColor="@color/text_main"
            android:textSize="@dimen/text_size_17"
            />

                <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5"
                android:background="@color/bg_all"/>

        <com.youzheng.zhejiang.robertmoog.utils.View.NoScrollListView
            android:dividerHeight="@dimen/space_10"
            android:divider="@color/bg_background_white"
            android:id="@+id/ls"
            android:background="@color/bg_background_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            ></com.youzheng.zhejiang.robertmoog.utils.View.NoScrollListView>




                <TextView
                    android:id="@+id/tv_meal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_7"
                    android:layout_marginLeft="@dimen/space_15"
                    android:text="套餐促销"
                    android:visibility="gone"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_17"
                    android:layout_marginBottom="@dimen/space_7"

                    />
                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/space_1"-->
                    <!--android:background="@color/bg_all"/>-->

                <android.support.v7.widget.RecyclerView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recycler_view"
                    android:background="@color/bg_background_white"
                    android:visibility="gone"
                    ></android.support.v7.widget.RecyclerView>


                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/space_5"-->
                    <!--android:background="@color/bg_all"/>-->

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_7"
                    android:layout_marginLeft="@dimen/space_15"
                    android:text="优惠券促销"
                    android:textColor="@color/text_main"
                    android:textSize="@dimen/text_size_17"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/space_7"

                    />
                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/space_1"-->
                    <!--android:background="@color/bg_all"/>-->

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_coupon"

                    ></android.support.v7.widget.RecyclerView>



    </LinearLayout>




</ScrollView>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:visibility="gone"
        android:background="@color/bg_all"
        android:paddingBottom="10dp"
        android:text="请店员引导消费者到店扫描门店张贴二维码领取"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>